<div style="display:flex; flex-direction:column; width:100%; height:100%;">
  {% if current and current.temperature %}
  <div style="display:flex; flex-direction:row; flex:1; min-height:0; gap:16px;">
    <div style="flex:55; min-width:0; display:flex; flex-direction:column; justify-content:center; padding-top:8px;">
      {% render "weather_current_compact", current: current %}
    </div>
    <div style="flex:45; min-width:0; display:flex; flex-direction:column; padding-top:8px; padding-right:6px; padding-bottom:8px;">
      {% render "weather_daily_bars_vertical", daily_entries: daily.entries, num_days: 3, current_temp: current.temperature %}
    </div>
  </div>
  {% else %}
  <div style="display:flex; flex-direction:column; justify-content:center; align-items:center; flex:1;">
    <img src="https://bmcdn.nl/assets/weather-icons/v3.0/line/svg/not-available.svg" style="width:64px; height:64px; opacity:0.4;">
    <div class="title" data-pixel-perfect="true" style="margin-top:12px;">No weather data available.</div>
  </div>
  {% endif %}
  <div style="margin-top:auto;">
    {% render "title_bar", plugin_name: trmnl.plugin_settings.instance_name, updated_at: current.time, icon_class: current.icon_class %}
  </div>
</div>
