<div style="display:flex; flex-direction:column; width:100%; height:100%;">
  {% if current and current.temperature %}
  <div style="display:flex; flex-direction:column; justify-content:center; flex:1; min-height:0;">
    {% render "weather_current_compact", current: current, icon_size: 48 %}
    <div style="padding: 16px 6px 4px 8px;">
      {% render "weather_daily_bars_vertical", daily_entries: daily.entries, num_days: 1, padding_top: 0, current_temp: current.temperature %}
    </div>
  </div>
  {% else %}
  <div style="display:flex; flex-direction:column; justify-content:center; align-items:center; flex:1;">
    <img src="https://bmcdn.nl/assets/weather-icons/v3.0/line/svg/not-available.svg" style="width:48px; height:48px; opacity:0.4;">
    <div class="title" data-pixel-perfect="true" style="margin-top:8px;">No weather data.</div>
  </div>
  {% endif %}
  <div style="margin-top:auto;">
    {% render "title_bar", plugin_name: trmnl.plugin_settings.instance_name, updated_at: current.time, icon_class: current.icon_class %}
  </div>
</div>
