<div style="display:flex; flex-direction:column; height:100%; padding-top:20px;">
  {% assign day_limit = num_days | default: 6 %}
  <div class="label" data-pixel-perfect="true" style="font-size:14px; letter-spacing:0.08em; margin-bottom:8px;">DAILY FORECAST</div>
